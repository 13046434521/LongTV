<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:background">@mipmap/start_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="mine_tab">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mine_beans_text">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <style name="view_linear_line">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:background">@color/colorLine</item>
    </style>

    <style name="tv_personal_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>
