<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.Traffic.TrafficActivity">
    <include
        layout="@layout/layout_title"
        android:id="@+id/layout_traffic_title"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_traffic_huomao"/>
    <ImageView
        android:id="@+id/iv_traffic_huomao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_traffic_title"
        app:layout_constraintBottom_toTopOf="@id/iv_traffic_tecent"
        android:src="@mipmap/tm_flow"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/iv_traffic_huomao_active"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_traffic_huomao"
        app:layout_constraintEnd_toEndOf="@id/iv_traffic_huomao"
        app:layout_constraintBottom_toBottomOf="@id/iv_traffic_huomao"
        android:src="@mipmap/tm_flow_active"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"/>
    <ImageView
        android:id="@+id/iv_traffic_tecent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_traffic_huomao"
        android:src="@mipmap/tencent_flow"
        android:scaleType="centerInside"/>
    <ImageView
        android:id="@+id/iv_traffic_tecent_active"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/iv_traffic_tecent"
        app:layout_constraintEnd_toEndOf="@id/iv_traffic_tecent"
        app:layout_constraintBottom_toBottomOf="@id/iv_traffic_tecent"
        android:src="@mipmap/tencent_active"
        android:scaleType="centerInside"
        android:layout_marginBottom="10dp"/>
</android.support.constraint.ConstraintLayout>