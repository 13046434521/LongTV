<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_live_container"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <ImageView
        android:id="@+id/img_live_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_live_title"
        android:src="@mipmap/live_loading_bg"
        android:layout_margin="@dimen/live_item_margin"
        android:scaleType="centerCrop"/>
    <View
        android:id="@+id/view_live_curtain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img_live_container"
        app:layout_constraintEnd_toEndOf="@id/img_live_container"
        app:layout_constraintStart_toStartOf="@id/img_live_container"
        app:layout_constraintBottom_toBottomOf="@id/img_live_container"
        android:background="@color/colorBlack"
        android:alpha="0">
    </View>
    <ImageView
        android:id="@+id/img_live_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@id/img_live_container"
        app:layout_constraintStart_toStartOf="@id/img_live_container"/>
    <TextView
        android:id="@+id/tv_live_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/img_live_container"
        app:layout_constraintEnd_toEndOf="@id/img_live_container"
        android:layout_margin="@dimen/live_item_margin"
        android:textSize="@dimen/live_item_name"
        android:text="休息中"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:alpha="0.5"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:id="@+id/tv_live_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/colorWhite"
        android:text=""
        android:layout_marginBottom="@dimen/live_item_margin"
        android:textSize="@dimen/live_item_name"
        app:layout_constraintBottom_toBottomOf="@id/img_live_container"
        app:layout_constraintEnd_toStartOf="@id/img_live_people"
        app:layout_constraintStart_toStartOf="@id/img_live_container"/>

    <ImageView
        android:id="@+id/img_live_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@mipmap/face_live_person_icon"
        app:layout_constraintBottom_toBottomOf="@id/tv_live_name"
        app:layout_constraintEnd_toStartOf="@id/tv_live_people"
        app:layout_constraintStart_toEndOf="@id/tv_live_name"
        app:layout_constraintTop_toTopOf="@id/tv_live_name" />

    <TextView
        android:id="@+id/tv_live_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/live_item_margin"
        android:lines="1"
        android:text=""
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/live_item_people"
        app:layout_constraintBottom_toBottomOf="@id/tv_live_name"
        app:layout_constraintEnd_toEndOf="@id/img_live_container"
        app:layout_constraintStart_toEndOf="@id/img_live_people"
        app:layout_constraintTop_toTopOf="@id/tv_live_name" />
    <TextView
        android:id="@+id/tv_live_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_live_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/img_live_container"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/live_item_margin"
        android:text=""
        android:ellipsize="end"
        android:textSize="@dimen/live_item_title"
        android:lines="1"/>
</android.support.constraint.ConstraintLayout>